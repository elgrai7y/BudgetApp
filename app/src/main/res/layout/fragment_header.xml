<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.HeaderFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/main_portrait"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="Home"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:drawableLeft="@drawable/home_icon"
        android:gravity="start|center_vertical"
        android:drawablePadding="10dp"
        android:background="@drawable/gray_outline"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/profile_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/home_nv"
        app:layout_constraintStart_toStartOf="@+id/home_nv"
        app:layout_constraintTop_toBottomOf="@+id/home_nv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="profile"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:drawableLeft="@drawable/profile_icon"
        android:gravity="start|center_vertical"
        android:drawablePadding="10dp"
        android:background="@drawable/gray_outline"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/trans_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/profile_nv"
        app:layout_constraintStart_toStartOf="@+id/profile_nv"
        app:layout_constraintTop_toBottomOf="@+id/profile_nv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="History"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:drawableLeft="@drawable/trans_icon"
        android:gravity="start|center_vertical"
        android:drawablePadding="10dp"
        android:background="@drawable/gray_outline"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/category_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/trans_nv"
        app:layout_constraintStart_toStartOf="@+id/trans_nv"
        app:layout_constraintTop_toBottomOf="@+id/trans_nv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="Categories"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:drawableLeft="@drawable/category_icon"
        android:gravity="start|center_vertical"
        android:drawablePadding="10dp"
        android:background="@drawable/gray_outline"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/category_nv"
        app:layout_constraintStart_toStartOf="@+id/category_nv"
        app:layout_constraintTop_toBottomOf="@+id/category_nv"
        android:layout_marginTop="50dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text="logout"
        android:paddingStart="15dp"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_logout"
        android:gravity="start|center_vertical"
        android:drawablePadding="10dp"
        android:background="@drawable/red_outline"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />

</androidx.constraintlayout.widget.ConstraintLayout>